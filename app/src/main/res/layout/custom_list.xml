<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:background="@android:color/holo_blue_dark"
            android:text="#1"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:fontFamily="@font/mont"
            android:id="@+id/lst_nomor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/list_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17 Des 2023"
                android:textColor="@color/white"
                android:fontFamily="@font/mont"
                android:textSize="22sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="5dp"/>
            <TextView
                android:id="@+id/list_koordinat"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="-2.19, 140.29"
                android:fontFamily="@font/mont"
                android:textColor="@color/white"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/list_wilayah"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:fontFamily="@font/mont"
                android:layout_height="wrap_content"
                android:text="45 km Barat Laut KAB-JAYAPURA-PAPUA"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>